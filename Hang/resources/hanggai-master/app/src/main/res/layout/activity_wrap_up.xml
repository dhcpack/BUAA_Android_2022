<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical"
    tools:context=".WrapUp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:text="成绩单："
        android:textSize="30dp"
        android:textColor="#19C6FF"
        android:textStyle="bold">

    </TextView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="30dp"
        android:background="@drawable/home_shouye_bg1">
    <TextView
        android:id="@+id/chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:paddingLeft="10dp"
        android:text="第一单元："
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

        <TextView
            android:id="@+id/defen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="10dp"
            android:text="得分:  "
            android:textColor="#000000"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/defen1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
        android:id="@+id/defen1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="88"
        android:textColor="#000000"
        android:textSize="80dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/defen" />

    <TextView
        android:id="@+id/yongshi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用时: "
        android:textSize="35dp"
        android:paddingTop="3dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/defen"
        app:layout_constraintLeft_toLeftOf="@id/defen"/>

    <TextView
        android:id="@+id/yongshi1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00：00"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="@+id/yongshi"
        app:layout_constraintLeft_toRightOf="@+id/yongshi"/>

    <TextView
        android:id="@+id/zhengque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="回答正确: "
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/yongshi"
        app:layout_constraintLeft_toLeftOf="@+id/defen"/>
    <TextView
        android:id="@+id/zhengque1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0道"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="@+id/zhengque"
        app:layout_constraintLeft_toRightOf="@+id/zhengque"/>
    <TextView
        android:id="@+id/cuowu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="回答错误: "
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/zhengque"
        app:layout_constraintLeft_toLeftOf="@+id/zhengque"/>
    <TextView
        android:id="@+id/cuowu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0道"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="@+id/cuowu"
        app:layout_constraintLeft_toRightOf="@+id/cuowu"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/fanhui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="返回首页"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="@drawable/btn_bg">
    </Button>
    <TextView
        android:id="@+id/remind"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textSize="17dp"
        android:text="哈哈哈">

    </TextView>
</LinearLayout>