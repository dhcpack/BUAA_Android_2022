<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".Home_xuexi"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#F6F6F6">

<GridLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="7"
    >
    <TextView
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:text="单元练习"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_rowWeight="1">
    </TextView>
    <Button
        android:id="@+id/chapter1"
        style="@style/button_xuexi_left"
        android:text="第一单元"
        android:layout_row="1"
        android:layout_column="0"
        android:textColor="#8FDFFF"
        android:background="@drawable/home_shouye_bg1"
>
    </Button>

    <Button
        android:id="@+id/chapter2"
        style="@style/button_xuexi_right"
        android:text="第二单元"
        android:layout_row="1"
        android:layout_column="1"
        android:textColor="#83D9FD"
        android:background="@drawable/home_shouye_bg1"
>
    </Button>

    <Button
        android:id="@+id/chapter3"
        style="@style/button_xuexi_left"
        android:text="第三单元"
        android:layout_row="2"
        android:layout_column="0"
        android:textColor="#6FCFFF"
        android:background="@drawable/home_shouye_bg1">
    </Button>
    <Button
        android:id="@+id/chapter4"
        style="@style/button_xuexi_right"
        android:text="第四单元"
        android:layout_row="2"
        android:layout_column="1"
        android:textColor="#56C8FF"
        android:background="@drawable/home_shouye_bg1">
    </Button>
    <Button
        android:id="@+id/chapter5"
        style="@style/button_xuexi_left"
        android:text="第五单元"
        android:layout_row="3"
        android:layout_column="0"
        android:textColor="#38C5FF"
        android:background="@drawable/home_shouye_bg1">
    </Button>
    <Button
        android:id="@+id/chapter6"
        style="@style/button_xuexi_right"
        android:text="第六单元"
        android:layout_row="3"
        android:layout_column="1"
        android:textColor="#19C6FF"
        android:background="@drawable/home_shouye_bg1">
    </Button>
    <TextView
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:text="复习题目"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:layout_rowWeight="1">
    </TextView>

    <Button
        android:id="@+id/button_collection"
        style="@style/button_xuexi_left"
        android:layout_row="5"
        android:layout_column="0"
        android:background="@drawable/home_shouye_bg1"
        android:text="收藏题目"
        android:layout_marginBottom="30dp"
        android:textColor="#19C6FF"></Button>

    <Button
        android:id="@+id/button_wrong"
        style="@style/button_xuexi_right"
        android:layout_row="5"
        android:layout_column="1"
        android:background="@drawable/home_shouye_bg1"
        android:text="错题重做"
        android:layout_marginBottom="30dp"
        android:textColor="#19C6FF"></Button>
</GridLayout>
</ScrollView>