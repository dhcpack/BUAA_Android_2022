<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--一行作为一个大方块，并排三个小方块-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginHorizontal="@dimen/dp_5"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_icon_book_1"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_80"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/ic_book" />

                <TextView
                    android:id="@+id/tv_title_book_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_book_add_content_1"
                    style="@style/ButtonStyle"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_36"
                    android:text="@string/book_add_content" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_book_view_content_1"
                    style="@style/ButtonStyle"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_36"
                    android:text="@string/book_view_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_icon_book_2"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_80"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/ic_book" />

                <TextView
                    android:id="@+id/tv_title_book_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_book_add_content_2"
                    style="@style/ButtonStyle"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_36"
                    android:text="@string/book_add_content" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_book_view_content_2"
                    style="@style/ButtonStyle"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_36"
                    android:text="@string/book_view_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_icon_book_3"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_80"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/ic_book" />

                <TextView
                    android:id="@+id/tv_title_book_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_book_add_content"
                    style="@style/ButtonStyle"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_36"
                    android:text="@string/book_add_content" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_book_view_content"
                    style="@style/ButtonStyle"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_36"
                    android:text="@string/book_view_content" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>