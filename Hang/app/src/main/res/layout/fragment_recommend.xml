<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.recom.Recommend">

    <TextView
        android:id="@+id/text_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recom_message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="根据您的学习内容，为您推荐以下记忆本"
            android:textSize="21dp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_iconmonstr_thumb_10"
            android:drawablePadding="4.0dip"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_10" />

        <View
            style="@style/HorizontalLineStyle"
            android:layout_gravity="bottom"
            android:layout_marginTop="3dp"
            android:paddingBottom="@dimen/dp_20"
            android:layout_height="@dimen/dp_3"/>
    </LinearLayout>

    <ListView
        android:id="@+id/reco_books"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="@dimen/dp_5"
        android:scrollbars="vertical"
        android:layout_marginTop="@dimen/dp_23"/>

</FrameLayout>