<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.mine.settings.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="@dimen/dp_30"
            android:orientation="horizontal"
            tools:ignore="RtlSymmetry">

            <com.example.hang.ui.mine.utils.view.ClearEditText
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/settings_night_mode"
                android:textSize="@dimen/sp_20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="@dimen/dp_80"
            android:orientation="horizontal"
            tools:ignore="RtlSymmetry">

            <com.example.hang.ui.mine.utils.view.SwitchButton
                android:id="@+id/btn_turn_on_night_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:checked="false" />
        </LinearLayout>
    </LinearLayout>

    <com.example.hang.ui.mine.utils.view.ClearEditText
        android:id="@+id/settings_learning"
        style="@style/EditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginHorizontal="@dimen/dp_30"
        android:text="@string/settings_learning"
        android:textSize="@dimen/sp_20"
        android:drawableEnd="@drawable/ic_arrows_right"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_log_out"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginHorizontal="@dimen/dp_30"
        android:text="@string/settings_log_out" />

</LinearLayout>