<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <!--个人信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_person_data_avatar"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_default_photo" />

            <TextView
                android:id="@+id/tv_stu_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_horizontal"
                android:scaleType="centerCrop">
            </TextView>

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_horizontal"
                android:scaleType="centerCrop">
            </TextView>
        </LinearLayout>

        <!--打卡天数-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_check_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dp_5"
                android:gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:text="@string/report_check_title"
                android:textSize="@dimen/sp_30">
            </TextView>

            <TextView
                android:id="@+id/tv_check_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dp_5"
                android:gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:text="@string/report_check_days"
                android:textSize="@dimen/sp_20">
            </TextView>

            <TextView
                android:id="@+id/tv_check_last_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dp_5"
                android:gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:text="@string/report_check_last_record"
                android:textSize="@dimen/sp_20">
            </TextView>
        </LinearLayout>

        <!--正在学习-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/report_learning_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dp_5"
                android:gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:text="@string/report_learning_title"
                android:textSize="@dimen/sp_30">
            </TextView>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_icon_book"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_120"
                android:gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_book" />

            <TextView
                android:id="@+id/tv_title_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:scaleType="centerCrop">
            </TextView>

            <TextView
                android:id="@+id/tv_learning_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:text="@string/report_learning_process"
                android:textSize="@dimen/sp_25">

            </TextView>

            <ProgressBar
                android:id="@+id/progressbar_learn"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_15"
                android:background="@drawable/bg_progressbar"
                android:max="100"
                android:progressDrawable="@drawable/bg_progressbar" />
        </LinearLayout>

        <!--生成图片-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_gen_report"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/report_gen_report"
                android:textColor="@color/white"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>