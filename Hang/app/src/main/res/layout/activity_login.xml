    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_register_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_80"
        android:text="@string/login_text"
        android:textColor="@color/black60"
        android:textSize="@dimen/sp_23" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_login_logo"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_40"
        android:layout_marginVertical="@dimen/dp_10" />

    <LinearLayout
        android:id="@+id/ll_login_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.hang.ui.mine.utils.view.ClearEditText
            android:id="@+id/user_input"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:hint="@string/common_name_input_hint"
            android:inputType="text"
            android:singleLine="true"
            app:regexType="anything" />

        <View
            style="@style/HorizontalLineStyle"
            android:layout_marginHorizontal="@dimen/dp_40" />

        <com.example.hang.ui.mine.utils.view.PasswordEditText
            android:id="@+id/password_input"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_15"
            android:hint="@string/common_password_input_error"
            android:imeOptions="actionDone"
            android:maxLength="20"
            android:singleLine="true" />

        <View
            style="@style/HorizontalLineStyle"
            android:layout_marginHorizontal="@dimen/dp_40" />

