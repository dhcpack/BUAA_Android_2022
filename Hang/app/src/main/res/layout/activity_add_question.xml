<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.mine.myBooks.AddQuestionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:clipToPadding="false"
        android:gravity="center_horizontal"
        android:layoutAnimation="@anim/layout_fall_down"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dp_40"
        tools:layoutAnimation="@null">

        <com.example.hang.ui.mine.utils.view.RegexEditText
            android:id="@+id/type_input"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:hint="@string/book_add_content_type"
            android:imeOptions="actionDone"
            android:maxLength="20"
            android:minHeight="48dp"
            android:singleLine="true"
            android:textColorHint="#757575"
            android:drawableEnd="@drawable/ic_arrows_bottom"/>

        <View
            style="@style/HorizontalLineStyle"
            android:layout_gravity="bottom" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_confirm"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_40"
            android:text="@string/common_confirm"
            android:textColor="@color/white"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>